<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Job</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      display: flex;
    }
    .sidebar {
      width: 220px;
      background-color: #343a40;
      min-height: 100vh;
      color: white;
      padding-top: 20px;
    }
    .sidebar a {
      color: white;
      padding: 10px 20px;
      display: block;
      text-decoration: none;
    }
    .sidebar a:hover {
      background-color: #495057;
    }
    .content {
      flex-grow: 1;
      padding: 20px;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <%- include('../partials/adminSidebar') %>
  <!-- Main Content -->
  <div class="content">
    <h2>Edit Job </h2>
    <form action="/admin/jobs/edit/<%= job.id %>" method="POST" class="mt-4">
      <div class="mb-3">
        <label for="title" class="form-label">Job Title</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= job.title %>" required>
      </div>
      <div class="mb-3">
        <label for="company" class="form-label">Company</label>
        <input type="text" class="form-control" id="company" name="company" value="<%= job.company %>" required>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Job Description</label>
        <textarea class="form-control" id="description" name="description" rows="5" required><%= job.description %></textarea>
      </div>
      <div class="mb-3">
        <label for="requirement_for" class="form-label">requirement_for</label>
        <input type="text" class="form-control" id="requirement_for" name="requirement_for" value="<%= job.requirement_for %>" required>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" name="location" value="<%= job.location %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Update Job</button>
      <a href="/admin/jobs" class="btn btn-secondary ms-2">Cancel</a>
    </form>
  </div>
</body>
</html>
