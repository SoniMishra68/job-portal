<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Application</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
    }
    .sidebar {
      height: 100vh;
      background-color: #343a40;
      padding-top: 1rem;
    }
    .sidebar a {
      color: #fff;
      padding: 10px;
      display: block;
      text-decoration: none;
    }
    .sidebar a:hover {
      background-color: #495057;
    }
    .content {
      padding: 20px;
    }
  </style>
</head>
<body>
<div class="container-fluid">
  <div class="row">
    <!-- Include Sidebar -->
    <%- include('../partials/sidebar') %>
    <!-- Main Content -->
    <div class="col-md-10 content">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card shadow-sm rounded-4">
            <div class="card-header bg-dark text-white">
              <h4 class="mb-0"></h4>
            </div>
            <div class="card-body">
              <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger"><%= error %></div>
              <% } %>
              <form action="/jobs/added" method= "POST" enctype="multipart/form-data">
                <input type="hidden" name = "job_id" value = "<%= applyid %>">
                <div class="mb-3">
                  <label for="title" class="form-label">Current Company</label>
                  <input type="text" class="form-control" id="current_company" name="current_company" placeholder="Enter" required>
                </div>
                <div class="mb-3">
                    <label for="current_ctc" class="form-label">Current CTC</label>
                    <input type="text" class="form-control" id="current_ctc" name="current_ctc" placeholder="current" required>
                </div>
                <div class="mb-3">
                    <label for="expected_ctc" class="form-label">Expected CTC</label>
                    <input type ="text" class="form-control" id="expected_ctc" name="expected_ctc" placeholder="current" required>
                </div>
                <div class="mb-3">
                    <label for = "total_experience" class="form-label">Total xperience</label>
                    <input type = "text" class="form-control" id="total_experience" name="total_experience"  placeholder="" required>
                </div>
                <div class="mb-3">
                    <label for="current_location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="current_location" name="current_location" placeholder="" required>
                </div>
                <div class="mb-3">
                  <label for="resume" class="form-label">Attach Resume (optional)</label>
                  <input class="form-control" type="file" id="resume" name="resume">
                </div>
                <div class="d-grid">
                  <button type="submit" class="btn btn-success">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
